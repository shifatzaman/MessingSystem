@{
    ViewData["Title"] = "Add Mess Member";
}


<div class="page-breadcrumb bg-white">
    <div class="row align-items-center">
        <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
            <h4 class="page-title">Add Mess Member</h4>
        </div>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="container-fluid" id="member-add">
    <!-- ============================================================== -->
    <!-- Start Page Content -->
    <!-- ============================================================== -->
    <div class="row">
        <div class="col-sm-12">
            <div class="card ms-input">
                <div class="card-body">
                    <form class="form-horizontal form-material" method="POST" id="member-form" data-bind="submit: AddMessMember">
                        <!-- ko with: SelMessMember-->
                        <div class="propic-holder form-group mb-4">
                            <label class="col-md-12 p-0">Profile Photo</label>
                            <div class="pro-pic">
                                <img class="pro-pic" data-bind="attr: {src: imagePath}" id="img-0" style="transform: rotate(0deg)">
                            </div>
                            <div style="margin-top: 5px !important;">
                                <div class="fileUpload" id="show">
                                    <input type="file" name="photo" class="upload" id="profilephoto" accept="image/*" data-bind="event: {change : $root.ProPicChanged}">
                                </div>
                                <span class="fileinput-filename"></span>
                            </div>
                        </div>
                        <div class="form-group mb-4">
                            <label class="col-md-12 p-0">Name</label>
                            <div class="col-md-12 border-bottom p-0">
                                <input type="text" data-bind="textInput: name" name="name" class="form-control p-0 border-0">
                            </div>
                        </div>
                        <div class="form-group mb-4">
                            <label class="col-md-12 p-0">BA no.</label>
                            <div class="col-md-12 border-bottom p-0">
                                <input type="text" data-bind="textInput: bnumb" name="bnumb" class="form-control p-0 border-0">
                            </div>
                        </div>
                        <div class="form-group mb-4">
                            <label class="col-md-12 p-0">Rank</label>
                            <div class="col-md-12 border-bottom p-0">
                                <input type="text" data-bind="textInput: rank" name="rank" class="form-control p-0 border-0">
                            </div>
                        </div>
                        <div class="form-group mb-4">
                            <label class="col-md-12 p-0">Appt</label>
                            <div class="col-md-12 border-bottom p-0">
                                <input type="text" data-bind="textInput: appt" name="appt" class="form-control p-0 border-0">
                            </div>
                        </div>
                        <div class="form-group mb-4">
                            <label class="col-md-12 p-0">Unit</label>
                            <div class="col-md-12 border-bottom p-0">
                                <input type="text" data-bind="textInput: unit" name="unit" class="form-control p-0 border-0">
                            </div>
                        </div>
                        <div class="form-group mb-4">
                            <label class="col-md-12 p-0">ContactNo</label>
                            <div class="col-md-12 border-bottom p-0">
                                <input type="text" data-bind="textInput: contactNo" name="contactNo" class="form-control p-0 border-0">
                            </div>
                        </div>
                        <div class="form-group mb-4">
                            <label class="col-md-12 p-0">Marital Status</label>
                            <div class="col-md-12 border-bottom p-0">
                                <select data-bind='options: $root.MaritalStatusOptions, optionsCaption: "Select One", optionsText: "key", optionsValue : "value", value: maritialStatus' class="form-select shadow-none p-0 border-0 form-control-line" name="maritialStatus">
                                </select>
                            </div>
                        </div>
                        <div class="form-group mb-4">
                            <label class="col-md-12 p-0">Member Status</label>
                            <div class="col-md-12 border-bottom p-0">
                                <select data-bind='options: $root.MemberStatusOptions, optionsCaption: "Select Member Status", optionsText: "key", optionsValue : "value", value: memberStatus' class="form-select shadow-none p-0 border-0 form-control-line" name="memberStatus">
                                </select>
                            </div>
                        </div>
                        <div class="form-group mb-4">
                            <label class="col-md-12 p-0">Role</label>
                            <div class="col-md-12 border-bottom p-0">
                                <select data-bind='options: $root.UserRoleOptions, optionsCaption: "Select User Roal", optionsText: "key", optionsValue : "value", value: userRole' class="form-select shadow-none p-0 border-0 form-control-line" name="userRole">
                                </select>
                            </div>
                        </div>
                        <div class="form-group mb-4">
                            <label class="col-md-12 p-0">Email</label>
                            <div class="col-md-12 border-bottom p-0">
                                <input type="text" data-bind="textInput: email" name="email" class="form-control p-0 border-0">
                            </div>
                        </div>
                        <div class="form-group mb-4">
                            <label class="col-md-12 p-0">Password</label>
                            <div class="col-md-12 border-bottom p-0">
                                <input type="password" data-bind="textInput: password" name="password" class="form-control p-0 border-0">
                            </div>
                        </div>
                        <!-- /ko -->
                        <div class="form-group mb-4">
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <environment names="Development">
        <script src="~/js/viewmodels/messMemberViewModel.js" asp-append-version="true"></script>
        <script src="~/js/models/messMember.js" asp-append-version="true"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/js/viewmodels/messMemberViewModel.js" asp-append-version="true"></script>
        <script src="~/js/models/messMember.js" asp-append-version="true"></script>
    </environment>

    <script type="text/javascript">
        $(document).ready(function () {
            setSideBarMenuActive(pageTypes.messmembers);

            var messMemberVM = new MessMemberViewModel();
            ko.applyBindings(messMemberVM, document.getElementById('member-add'));
            var memberId = getParamValueFromUrl('memberid');
            messMemberVM.SelMemberId(memberId);
        });
    </script>
}